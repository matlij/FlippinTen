<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="FlippinTen.Views.GamePage"
             xmlns:Helpers="clr-namespace:FlippinTen.Helpers"
             xmlns:control="clr-namespace:FlippinTen.CustomControls;assembly=FlippinTen"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource AppBackgroundColor}">
    <ContentPage.Resources>
        <Style TargetType="Frame">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor"
                                        Value="Transparent"/>
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor"
                                        Value="#78C6B5" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout Margin="20,20,20,20">
            <AbsoluteLayout IsVisible="{Binding WaitingForPlayers}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <StackLayout Spacing="25" AbsoluteLayout.LayoutBounds="0.5, 0.5, -1, -1" AbsoluteLayout.LayoutFlags="PositionProportional">
                    <Label Text="Väntar på andra spelare..."
                       FontSize="Medium"
                       VerticalOptions="CenterAndExpand"
                       HorizontalOptions="CenterAndExpand"/>
                    <ActivityIndicator IsRunning="{Binding WaitingForPlayers}"
                                   HeightRequest="40"
                                   VerticalOptions="CenterAndExpand"
                                   HorizontalOptions="CenterAndExpand"/>
                </StackLayout>
            </AbsoluteLayout>
            <AbsoluteLayout IsVisible="{Binding GameOver}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <StackLayout Spacing="50" AbsoluteLayout.LayoutBounds="0.5, 0.5, -1, -1" AbsoluteLayout.LayoutFlags="PositionProportional">
                    <Label
                        Text="{Binding GameStatus}"
                        FontSize="35"
                        VerticalOptions="CenterAndExpand"
                        HorizontalOptions="CenterAndExpand"/>
                    <Button Text="Returmatch" Style="{StaticResource buttonStyle}" VerticalOptions="Center"/>
                </StackLayout>
            </AbsoluteLayout>
            <StackLayout Spacing="15" 
                         IsVisible="{Binding ShowGame}"
                         IsEnabled="{Binding IsPlayersTurn}">
                <StackLayout Padding="10,0,10,20">
                    <Label Text="Spelinfo"
                               FontSize="Medium"
                               FontAttributes="Bold"/>
                    <BoxView Color="White"
                                 HeightRequest="1"
                                 HorizontalOptions="Fill" />
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Text="Spelares tur: "/>
                        <Label Grid.Row="0" Grid.Column="1" FontAttributes="Bold" HorizontalOptions="Start" Text="{Binding PlayerTurnStatus}"/>
                        <Label Grid.Row="1" Grid.Column="0" Text="Senaste drag: "/>
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding GameStatus}"/>
                    </Grid>
                    <BoxView Color="White"
                                 HeightRequest="1"
                                 HorizontalOptions="Fill" />
                </StackLayout>
                
                <Grid Padding="0,0,0,10" HorizontalOptions="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Text="{Binding CardOnTableCount, StringFormat='Spelat kort: {0} st'}"
                           HorizontalTextAlignment="Center"/>
                    <control:CustomImage Grid.Row="1"
                           HeightRequest="150"
                           Source="{Binding TopCardOnTable.ImageUrl}">
                        <control:CustomImage.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CardOnTableTappedCommand}"/>
                        </control:CustomImage.GestureRecognizers>
                    </control:CustomImage>
                    <Label Grid.Column="1"
                           Text="{Binding CardDeckCount, StringFormat='Kortlek: {0} st'}"
                           HorizontalTextAlignment="Center"/>
                    <Image Grid.Row="1"
                           Grid.Column="1"
                           HeightRequest="160"
                           Source="{Binding CardBack}">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="DeckOfCardsTapped"/>
                        </Image.GestureRecognizers>
                    </Image>
                </Grid>

                <Label Text="Kort på hand"
                       HorizontalTextAlignment="Center" 
                       FontSize="Medium"/>
                <CollectionView ItemsSource="{Binding CardsOnHand}"
                        SelectionMode="Multiple" 
                        SelectedItems="{Binding SelectedCards}"
                        SelectionChangedCommand="{Binding CardOnHandTappedCommand}">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" Span="4" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame CornerRadius="3"  
                                   Padding="10" 
                                   BackgroundColor="{Binding BackroundColor}">
                                <control:CustomImage HeightRequest="90"
                                                     Source="{Binding ImageUrl}"/>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>