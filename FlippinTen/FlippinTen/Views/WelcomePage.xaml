<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="FlippinTen.Views.WelcomePage"
             Title="Välkommen till vändtia!"
             BackgroundColor="{StaticResource AppBackgroundColor}">
    <ContentPage.Content>
        <StackLayout Spacing="10" 
                     VerticalOptions="Center">
            <Image Source="Logo.png" HeightRequest="210" Margin="0,0,0,60"/>
            <Button Text="Spela mot en vän"
                    Style="{StaticResource buttonStyle}"
                    Clicked="PlayFriendButtonClicked"/>
            <Button Text="Spela mot datorn"
                    Style="{StaticResource buttonStyle}"
                    Clicked="PlayComputerButtonClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>